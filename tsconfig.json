{
    "compilerOptions": {
        "exactOptionalPropertyTypes": true,
        "module": "CommonJS",
        "lib": ["ESNext", "DOM"],
        "noEmitOnError": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "strict": true,
        "target": "ES2016",
        "resolveJsonModule": true
    },
    "ts-node": {
        "files": true
    },
    "include": ["src/main.ts"]
}